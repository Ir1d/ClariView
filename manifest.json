{
  "manifest_version": 3,
  "name": "ClariView",
  "version": "1.0",
  "description": "Summarize web pages using LLM",
  "icons": {
    "16": "icon.png",
    "32": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "clipboardWrite",
    "contextMenus"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "marked.min.js",
        "content-script.js"
      ],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_icon": "icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "options.html",
  "web_accessible_resources": [{
    "resources": [
      "sidebar.html", 
      "sidebar.css", 
      "sidebar.js",
      "popup.html",
      "injected-popup.css",
      "content-styles.css"
    ],
    "matches": ["<all_urls>"]
  }]
} 