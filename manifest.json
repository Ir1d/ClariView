{
  "manifest_version": 3,
  "name": "ClariView",
  "version": "1.0",
  "description": "Summarize web pages using LLM",
  "icons": {
    "16": "icon.png",
    "32": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "contextMenus"
  ],
  "host_permissions": [
    "https://*.openai.com/*",
    "https://*.anthropic.com/*",
    "https://*.youtube.com/*",
    "https://www.youtube.com/*",
    "https://youtube.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://*/*",
        "http://*/*"
      ],
      "js": [
        "marked.min.js",
        "content-script.js"
      ],
      "css": ["content-styles.css"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_icon": "icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "options.html",
  "web_accessible_resources": [{
    "resources": [
      "sidebar.html", 
      "sidebar.css", 
      "sidebar.js",
      "popup.html",
      "injected-popup.css",
      "content-styles.css",
      "src/lib/youtube.js"
    ],
    "matches": ["https://*.youtube.com/*", "https://youtube.com/*"]
  }]
} 